<%- include("header") -%>

<div class="box">
  <h1 id="heading"><%= listTitle %></h1>
</div>

<div class="box">
  <% items.forEach(function(item){ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkedItem" value="<%= item._id %>" onchange="this.form.submit()"></input>
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listTitle" value="<%= listTitle %>"></input>
    </form>
  <%})%>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New item" autocomplete="off">
    <button type="submit" name="listButton" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
